#!/bin/bash
if [ -n "$1" ]; then
  export LESS_TERMCAP_so=$'\e[01;93'
  git config color.diff.old "red"
  git config color.diff.new "green"
  git config color.diff.meta "magenta"
  git -c color.ui=always log -S "$1" --source --graph --decorate --all | less -R -p "$1"
else
  git -c color.ui=always log --source --graph --decorate --all | less -R
fi
